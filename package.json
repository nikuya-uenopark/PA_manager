    "タブレット",
    "評価システム"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "packageManager": "npm@10.8.1",
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "type": "commonjs",
  "postinstall:note": "moved to scripts to ensure Vercel runs prisma generate"
}

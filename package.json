{
  "name": "pa-manager",
  "version": "1.0.0",
  "description": "iPad向け人事評価管理システム",
  "main": "public/index.html",
  "scripts": {
    "dev": "vercel dev",
    "build": "echo 'Static site - no build needed'",
    "vercel-build": "prisma generate",
    "deploy": "vercel --prod",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:migrate": "prisma migrate dev --name sync-mgmt-code",
    "prisma:seed": "prisma db seed",
    "prisma:status": "prisma migrate status",
    "prisma:resolve:mgmt": "prisma migrate resolve --applied 20250813090100_add_mgmt_code",
    "mgmt:assign": "node scripts/assignMgmtCodes.js",
    "postinstall": "prisma generate || true"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0"
  },
  "devDependencies": {
    "prisma": "^5.15.0"
  },
  "keywords": [
    "人事評価",
    "スタッフ管理",
    "iPad",
    "タブレット",
    "評価システム"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "packageManager": "npm@10.8.1",
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "node prisma/seed.js"
  },
  "type": "commonjs",
  "postinstall:note": "moved to scripts to ensure Vercel runs prisma generate"
}
